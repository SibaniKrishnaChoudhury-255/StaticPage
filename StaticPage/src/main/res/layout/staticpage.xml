<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="4"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opps!"
            android:textColor="#5E5757"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5">
        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/frog">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/footerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO INTERNET CONNECTION !"
            android:layout_centerHorizontal="true"
            android:textColor="#5E5757"
            android:textSize="21dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="30dp"
            >

        </TextView>
        <TextView
            android:id="@+id/footerMessage"
            android:layout_below="@id/footerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your internet Connection and try to refresh again and again"
            android:layout_centerHorizontal="true"
            android:textColor="#5E5757"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            >

        </TextView>

        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/footerMessage"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            android:text="Refresh"
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_marginBottom="10dp">

        </Button>

    </RelativeLayout>

</LinearLayout>